{
    "manifest_version": 2,
    "name": "Save code to Bookmarks.dev",
    "description": "Select code snippet, right click or click the extension icon to save it to Bookmarks.dev",
    "version": "1.0.0",
    "homepage_url": "https://github.com/BookmarksDev/code-snippets-browser-extension",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "browser-polyfill.0.6.0.js",
            "background.js"
        ]
    },

    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "browser_action": {
        "default_icon": "icons/icon128.png"
    }
}
